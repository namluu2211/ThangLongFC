{
  "name": "thanglong-fc",
  "version": "1.0.0",
  "private": true,
  "description": "ThangLong FC - Mia Football Club Management Application",
  "author": "Nam Luu <bktientu@gmail.com>",
  "license": "MIT",
  "copyright": "Â© 2025 Nam Luu. All rights reserved.",
  "homepage": "https://mia-fc-management.web.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/namluu2211/ThangLongFC.git"
  },
  "keywords": [
    "football",
    "team-management",
    "angular",
    "firebase",
    "thanglong-fc",
    "mia-fcm",
    "mia-football-club-management"
  ],
  "scripts": {
    "start": "ng serve --open",
    "start:env": "node scripts/build-with-env.js development && ng serve --open",
    "build": "node scripts/build-with-env.js production",
    "build:dev": "node scripts/build-with-env.js development",
    "players:file:server": "node scripts/players-file-server.js",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "lint": "ng lint",
    "deploy:firebase": "npm run build && firebase deploy --only hosting:mia-fc-management",
    "firebase:rules": "node scripts/generate-firebase-rules.js",
    "e2e": "npx playwright install --with-deps && npx playwright test",
    "e2e:dev": "powershell -Command \"Start-Process -FilePath npm -ArgumentList 'run start' ; while(-not (Test-NetConnection -ComputerName 127.0.0.1 -Port 4200 -WarningAction SilentlyContinue).TcpTestSucceeded){ Start-Sleep -Seconds 2 } ; npx playwright install --with-deps ; npx playwright test\"",
    "profile": "node scripts/profile-performance.js"
  },
  "dependencies": {
    "@angular/animations": "20.3.6",
    "@angular/cdk": "20.2.4",
    "@angular/common": "20.3.6",
    "@angular/compiler": "20.3.6",
    "@angular/core": "20.3.6",
    "@angular/fire": "20.0.1",
    "@angular/forms": "20.3.6",
    "@angular/platform-browser": "20.3.6",
    "@angular/platform-browser-dynamic": "20.3.6",
    "@angular/router": "20.3.6",
    "firebase": "^12.3.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.6.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "20.3.6",
    "@angular/cli": "20.3.6",
    "@angular/compiler-cli": "20.3.6",
    "@playwright/test": "^1.48.0",
    "@types/jest": "^29.5.11",
    "angular-cli-ghpages": "^2.0.3",
    "angular-eslint": "20.3.0",
    "eslint": "^9.35.0",
    "jest": "^29.7.0",
    "jest-preset-angular": "^14.6.2",
    "ts-jest": "^29.2.5",
    "typescript": ">=5.5.0 <5.9.0",
    "typescript-eslint": "8.40.0"
  }
}
