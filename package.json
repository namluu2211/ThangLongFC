  "scripts": {
    "start": "ng serve --open",
    "start:dev": "ng serve --open",
    "build": "node scripts/build-with-env.js development",
    "build:dev": "node scripts/build-with-env.js development",
    "build:prod": "node scripts/build-with-env.js production",
    "test": "ng test",
