    "deploy:github": "npm run build:prod && npx angular-cli-ghpages --dir=dist/browser --branch=gh-pages --no-silent",
    "deploy:firebase": "npm run build:firebase && firebase deploy --only hosting:mia-fc-management",
    "build:firebase": "node scripts/build-with-env.js production && npx ng build --configuration=production --base-href=\"/\"",
    "deploy:firebase:all": "npm run build:prod && firebase deploy --only hosting",
    "deploy:firebase:preview": "npm run build:prod && firebase hosting:channel:deploy preview",
    "firebase:rules": "node scripts/generate-firebase-rules.js"
  },
